<Window x:Class="LAB_7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Синтезатор речи" Height="450" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Button x:Name="LoadFileButton" Content="Загрузить файл" Click="LoadFileButton_Click" Margin="10"/>
        <TextBox x:Name="inputTextBox" Grid.Row="1" Margin="10" TextWrapping="Wrap" AcceptsReturn="True"/>
        <Button x:Name="SynthesizeButton" Content="Синтезировать" Click="SynthesizeButton_Click" Grid.Row="2" Margin="10"/>
        <Button x:Name="SaveButton" Content="Сохранить" Click="SaveButton_Click" Grid.Row="2" HorizontalAlignment="Right" Margin="10"/>
    </Grid>
</Window>
